	div(class="ui main four column container")
		div(class="ui grid")
			div(class="row")
				div(class="four wide column")
					div(id="menu" class="ui large vertical menu")
						div(class="item")
							div(class="ui icon input")
								input(type="text" placeholder="Search teams...")
								i(class="search icon")
